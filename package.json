{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "php-homebrew-switcher",
  "title": "PHP Homebrew Switcher",
  "description": "Switch PHP version with Homebrew",
  "icon": "icon.png",
  "author": "David",
  "owner": "woda",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "PHP",
      "description": "Switch PHP version with Homebrew",
      "mode": "view",
      "preferences": [
        {
          "name": "brewPath",
          "required": false,
          "title": "Brew Path",
          "type": "textfield",
          "description": "Get via command 'which brew'",
          "default": "/opt/homebrew/bin/brew"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.85.2",
    "@raycast/utils": "^1.18.0"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.10.0",
    "prettier": "^2.8.8",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
